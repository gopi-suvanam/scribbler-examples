    {
      "code": "const ctx = document.getElementById('myChart').getContext('2d');\n      new Chart(ctx, {\n        type: 'line',\n        data: {\n          labels: ['January', 'February', 'March', 'April', 'May'],\n          datasets: [{\n            label: 'Sales',\n            data: [10, 20, 15, 25, 30],\n            borderColor: 'blue',\n            backgroundColor: 'rgba(0,0,255,0.1)',\n            fill: true\n          }]\n        },\n        options: {\n          responsive: true,\n          plugins: {\n            title: {\n              display: true,\n              text: 'Monthly Sales'\n            }\n          }\n        }\n      });\n0",
